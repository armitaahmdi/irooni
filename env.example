# ============================================
# تنظیمات پایه پروژه
# ============================================

# محیط اجرای برنامه (development, production, test)
# این متغیر معمولاً به صورت خودکار توسط پلتفرم deployment تنظیم می‌شود
NODE_ENV=production

# آدرس پایه وب‌سایت (بدون اسلش انتهایی)
# برای production: https://irooni.com
# برای development: http://localhost:3000
NEXT_PUBLIC_BASE_URL=https://irooni.com

# ============================================
# تنظیمات دیتابیس PostgreSQL
# ============================================

# آدرس اتصال به دیتابیس PostgreSQL
# فرمت: postgresql://username:password@host:port/database?schema=public
# برای production باید از SSL استفاده شود: &sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/irooni?schema=public

# حداکثر تعداد connection در pool (پیش‌فرض: 20)
DATABASE_POOL_MAX=20

# حداقل تعداد connection در pool (پیش‌فرض: 5)
DATABASE_POOL_MIN=5

# ============================================
# تنظیمات احراز هویت (NextAuth)
# ============================================

# Secret key برای NextAuth
# برای تولید secret جدید: openssl rand -base64 32
# یا: npx auth secret
AUTH_SECRET=your-auth-secret-key-here-generate-a-random-string

# ============================================
# تنظیمات ارسال پیامک (Kavenegar)
# ============================================

# API Key برای سرویس Kavenegar
# دریافت از: https://panel.kavenegar.com/
KAVENEGAR_API_KEY=your-kavenegar-api-key

# نام الگوی OTP در پنل Kavenegar (اختیاری)
# در صورت تنظیم، از متد Lookup استفاده می‌شود که اولویت بالاتری دارد
# در غیر این صورت از متد Send استفاده می‌شود
KAVENEGAR_TEMPLATE_NAME=myverification

# شماره فرستنده پیش‌فرض برای Kavenegar (اختیاری)
# در صورت عدم تنظیم، از خط پیش‌فرض حساب استفاده می‌شود
KAVENEGAR_SENDER=

# ============================================
# تنظیمات نقشه (Neshan Maps)
# ============================================

# API Key برای سرویس Neshan Maps
# دریافت از: https://platform.neshan.org/
NEXT_PUBLIC_NESHAN_API_KEY=your-neshan-api-key

# ============================================
# تنظیمات مانیتورینگ و Error Tracking
# ============================================

# DSN برای Sentry (Error Tracking)
# دریافت از: https://sentry.io/
# اختیاری - اگر تنظیم نشود Sentry غیرفعال می‌شود
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# تنظیمات Logging
# ============================================

# سطح logging (trace, debug, info, warn, error, fatal)
# در production بهتر است info یا warn باشد
LOG_LEVEL=info

# ============================================
# تنظیمات API (اختیاری)
# ============================================

# آدرس پایه API (اگر با base URL متفاوت است)
# معمولاً نیاز نیست و همان NEXT_PUBLIC_BASE_URL استفاده می‌شود
NEXT_PUBLIC_API_URL=

# ============================================
# نکات مهم
# ============================================
# 1. هرگز فایل .env را به Git commit نکنید
# 2. برای production از secrets management استفاده کنید
# 3. AUTH_SECRET باید یک رشته تصادفی و امن باشد
# 4. DATABASE_URL در production باید از SSL استفاده کند
# 5. تمام NEXT_PUBLIC_* متغیرها در client-side قابل دسترسی هستند
# 6. متغیرهای دیگر فقط در server-side قابل دسترسی هستند

